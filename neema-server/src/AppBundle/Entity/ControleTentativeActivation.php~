<?php

namespace AppBundle\Entity;

use Doctrine\ORM\Mapping as ORM;
use Symfony\Component\Validator\Constraints as Assert;
use JMS\Serializer\Annotation\ExclusionPolicy,
    JMS\Serializer\Annotation\Expose,
    JMS\Serializer\Annotation\SerializedName;
use Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity;


/**
 * ControleTentativeActivation
 *
 * @ORM\Table(name="controle_tentative_activation")
 * @ORM\Entity(repositoryClass="AppBundle\Repository\ControleTentativeActivationRepository")
 * @@ExclusionPolicy("all")
 */
class ControleTentativeActivation
{
    /**
     * @var int
     *
     * @ORM\Column(name="id", type="guid")
     * @ORM\Id
     * @ORM\GeneratedValue(strategy="UUID")
     * @Expose()
     */
    private $id;

    /**
     * @var \DateTime
     *
     * @ORM\Column(name="dateTentative", type="date")
     * @Expose()
     * @SerializedName("dateTentative")
     */
    private $dateTentative;

    /**
     * @var int
     *
     * @ORM\Column(name="nbreTentative", type="smallint")
     * @Expose()
     * @SerializedName("nbreTentative")
     */
    private $nbreTentative;

    /**
     * @ORM\ManyToOne(targetEntity="User")
     * @ORM\JoinColumn(nullable=false)
     * @Assert\NotNull(message="Le user est obligatoire")
     */
    private $user;


    /**
     * Get id
     *
     * @return int
     */
    public function getId()
    {
        return $this->id;
    }

    /**
     * Set dateTentative
     *
     * @param \DateTime $dateTentative
     *
     * @return ControleTentativeActivation
     */
    public function setDateTentative($dateTentative)
    {
        $this->dateTentative = $dateTentative;

        return $this;
    }

    /**
     * Get dateTentative
     *
     * @return \DateTime
     */
    public function getDateTentative()
    {
        return $this->dateTentative;
    }

    /**
     * Set nbreTentative
     *
     * @param integer $nbreTentative
     *
     * @return ControleTentativeActivation
     */
    public function setNbreTentative($nbreTentative)
    {
        $this->nbreTentative = $nbreTentative;

        return $this;
    }

    /**
     * Get nbreTentative
     *
     * @return int
     */
    public function getNbreTentative()
    {
        return $this->nbreTentative;
    }
}

